<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Raporti i Dr. <%= doctor.full_name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    @media print {
      .no-print {
        display: none;
      }
    }
  </style>
</head>
<body class="container mt-4">
  <h1 class="mb-3">Raporti i Dr. <%= doctor.full_name %></h1>
  <p>Email: <%= doctor.email %></p>
  <p>Departamenti: <%= doctor.department %></p>

  <h3 class="mt-4">Terminet e fundit</h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Pacienti</th>
        <th>Data</th>
        <th>Ora</th>
        <th>Statusi</th>
      </tr>
    </thead>
    <tbody>
      <% appointments.forEach(a => { %>
        <tr>
          <td><%= a.patient_name %></td>
          <td><%= new Date(a.appointment_date).toLocaleDateString() %></td>
          <td><%= a.appointment_time.substring(0, 5) %></td>
          <td><%= a.status %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <button onclick="window.print()" class="btn btn-success mt-3 no-print">
    <i class="fa fa-print"></i> Printo
  </button>
</body>
</html>
