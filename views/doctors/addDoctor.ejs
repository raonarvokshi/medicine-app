<%- include("../partials/dashboard.ejs") %>

<div class="container-fluid">
  <div class="row">
    <!-- Main Content -->
    <main class="col-lg-10 offset-lg-2 pt-4 px-4 bg-light min-vh-100">
      <div class="doctor-header d-flex align-items-center justify-content-between mt-3">
        <h1 class="add-doctor__title">Shto doktor te ri</h1>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Ballina</a></li>
            <li class="breadcrumb-item"><a href="/dashboard">Paneli</a></li>
            <li class="breadcrumb-item active" aria-current="page">Shto doktor</li>
          </ol>
        </nav>
      </div>

      <form action="/add/doctor" method="POST" class="bg-white shadow-lg p-5 rounded-3 mt-4">
        <div class="row mt-3">
          <!-- Name -->
          <div class="col-lg-6">
            <label for="name" class="form-label">Emri i plote</label>
            <div class="input-group mt-1">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
              <input type="text" class="form-control" placeholder="Emri i plote..." id="name" name="fullName">
            </div>
          </div>

          <!-- Department -->
          <div class="col-lg-6">
            <label for="department" class="form-label">Departamenti</label>
            <div class="input-group mt-1">
              <span class="input-group-text"><i class="fas fa-building"></i></span>
              <input type="text" class="form-control" placeholder="Departamenti..." id="department" name="department">
            </div>
          </div>

          <!-- Phone Number -->
          <div class="col-lg-6 mt-3">
            <label for="phone-number" class="form-label">Numri i telefonit</label>
            <div class="input-group mt-1">
              <span class="input-group-text"><i class="fas fa-phone"></i></span>
              <input type="number" class="form-control" placeholder="Numri i telefonit..." id="phone-number" name="phoneNumber">
            </div>
          </div>

          <!-- Email -->
          <div class="col-lg-6 mt-3">
            <label for="email" class="form-label">Email</label>
            <div class="input-group mt-1">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
              <input type="email" class="form-control" placeholder="Email..." id="email" name="email">
            </div>
          </div>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-lg mt-4 add-doc__btn">
          <i class="fas fa-plus-circle"></i> Shto doktor
        </button>

        <% if (locals.success) { %>
          <p class="text-success mt-3" id="success-msg"><%= success %></p>
        <% } %>

        <% if (locals.error) { %>
          <p class="text-danger mt-3" id="error-msg"><%= error %></p>
        <% } %>
      </form>
    </main>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
  $(document).ready(function () {
    const errorMsg = $("#error-msg");
    const successMsg = $("#success-msg");

    if (errorMsg.length) {
      setTimeout(() => {
        errorMsg.fadeOut("slow");
      }, 5000);
    }

    if (successMsg.length) {
      setTimeout(() => {
        successMsg.fadeOut("slow");
      }, 5000);
    }
  });
</script>
