    <!-- Main Content -->
    <main class="col-lg-10 offset-lg-2 pt-4 px-4 bg-light min-vh-100">
      <div class="doctor-header d-flex align-items-center justify-content-between mt-3">
        <h1 class="add-doctor__title">Shiko doktorat</h1>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Ballina</a></li>
            <li class="breadcrumb-item"><a href="/dashboard">Paneli</a></li>
            <li class="breadcrumb-item active" aria-current="page">Shiko doktorat</li>
          </ol>
        </nav>
      </div>

      <!-- Tabela -->
      <div class="card mt-4 shadow">
        <div class="card-body">
          <table id="doctorsTable" class="table table-bordered table-striped">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Emri</th>
                <th>Departamenti</th>
                <th>Tel</th>
                <th>Email</th>
                <th>Data krijimit</th>
                <th>I perditsuar</th>
                <th>Veprimet</th>
              </tr>
            </thead>
            <tbody>
              <% doctors.forEach((doctor, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= doctor.full_name %></td>
                  <td><%= doctor.department %></td>
                  <td><%= doctor.tel %></td>
                  <td><%= doctor.email %></td>
                  <td><%= new Date(doctor.created_at).toLocaleDateString("en-US") %></td>
                  <td>
                    <% if (doctor.updated_at) { %>
                        <%= new Date(doctor.updated_at).toLocaleString("en-US", {
                          day: "2-digit",
                          month: "2-digit",
                          year: "numeric",
                          hour: "2-digit",
                          minute: "2-digit",
                          hour12: true
                        }) %>
                    <% } else { %>
                      <span class="text-muted fst-italic">Jo</span>
                    <% } %>
                  </td>
                  <td>
                    <!-- Butoni për editim -->
                    <a href="#" class="btn btn-warning edit-doctor-btn" 
                      data-id="<%= doctor.id %>" 
                      data-name="<%= doctor.full_name %>" 
                      data-department="<%= doctor.department %>" 
                      data-tel="<%= doctor.tel %>" 
                      data-email="<%= doctor.email %>">
                      <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <!-- Butoni për fshirje -->
                    <a href="#" class="btn btn-danger delete-doctor-btn"
                      data-id="<%= doctor.id %>" 
                      data-name="<%= doctor.full_name %>">
                      <i class="fa-solid fa-trash"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
