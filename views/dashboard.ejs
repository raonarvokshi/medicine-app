<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include("./partials/navbar.ejs")  %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebarMenu" class="col-lg-2 d-lg-block sidebar collapse">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item text-center">
              <a class="nav-link active dashboard-sidebar__link" href="/dashboard">
                <i class="fa-solid fa-user"></i> <%= user.username %>
              </a>
            </li>
            <hr>
            
            <li class="nav-item mb-3">
                <a class="nav-link sidebar-link d-flex align-items-center" data-bs-toggle="collapse" href="#doctorsMenu" role="button">
                    <i class="fas fa-user-md"></i>&nbsp;
                    <span class="flex-grow-1">Doctors</span>
                    <i class="fa-solid fa-chevron-down arrow ms-auto"></i>
                </a>
                <div class="collapse menu" id="doctorsMenu">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        <li class="ps-3">
                            <a href="/add/doctor" class="nav-link">
                                <i class="fa-solid fa-user-plus"></i>&nbsp; Add Doctor
                            </a>
                        </li>

                        <li class="ps-3">
                            <a href="/doctors/view" class="nav-link">
                                <i class="fas fa-user-md"></i>&nbsp; View Doctors
                            </a>
                        </li>
                    </ul>
                </div>
            </li>

            <li class="nav-item mb-3">
                <a class="nav-link sidebar-link d-flex align-items-center" data-bs-toggle="collapse" href="#patientsMenu" role="button">
                    <i class="fas fa-users"></i>&nbsp;
                    <span class="flex-grow-1">Patients</span>
                    <i class="fa-solid fa-chevron-down arrow ms-auto"></i>
                </a>
              <div class="collapse ps-3 menu" id="patientsMenu">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                  <li><a href="/patients/add" class="nav-link">Add Patient</a></li>
                  <li><a href="/patients/view" class="nav-link">View Patients</a></li>
                </ul>
              </div>
            </li>

            <li class="nav-item mb-3">
                <a class="nav-link sidebar-link d-flex align-items-center" data-bs-toggle="collapse" href="#employeesMenu" role="button">
                    <i class="fa-solid fa-user-nurse"></i>&nbsp;
                    <span class="flex-grow-1">Employees</span>
                    <i class="fa-solid fa-chevron-down arrow ms-auto"></i>
                </a>

              <div class="collapse ps-3 menu" id="employeesMenu">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                  <li><a href="#" class="nav-link">Add Employee</a></li>
                  <li><a href="/change-password" class="nav-link">View Employees</a></li>
                </ul>
              </div>
            </li>

            <li class="nav-item mb-3">
                <a class="nav-link sidebar-link d-flex align-items-center" data-bs-toggle="collapse" href="#settingsMenu" role="button">
                    <i class="fa-solid fa-gear"></i>&nbsp;
                    <span class="flex-grow-1">Patients</span>
                    <i class="fa-solid fa-chevron-down arrow ms-auto"></i>
                </a>
              <div class="collapse ps-3 menu" id="settingsMenu">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                  <li><a href="/profile" class="nav-link">Profile</a></li>
                  <li><a href="/change-password" class="nav-link">Change Password</a></li>
                  <li><a href="/delete-account" class="nav-link">Delete Account</a></li>
                </ul>
              </div>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="col-md-10 ml-sm-auto col-lg-10 pt-3 px-4 bg-light">
        <!-- Welcome Message -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info shadow-sm fs-5">
                    Welcome back, <strong> <%= user.username %> </strong>!
                </div>
            </div>
        </div>

        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
          </ol>
        </nav>

        <div class="row justify-content-center gx-4 gy-3 mt-4">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card text-white bg-primary shadow-lg">
                    <div class="card-header fs-4">
                        <i class="fas fa-users"></i> Total Patients
                    </div>
                    <div class="card-body">
                        <h3 class="card-title fs-2">150</h3>
                    </div>

                    <a class="card-footer text-white text-decoration-none fs-5 d-flex justify-content-between align-items-center" href="#">
                    More info <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

          <div class="col-lg-4 col-md-3 col-sm-12 pr-0 mb-3">
            <div class="card text-white bg-success shadow-lg">
              <div class="card-header fs-4"><i class="fas fa-user-md"></i> Total Docotrs</div>
              <div class="card-body">
                <h3 class="card-title fs-2">53</h3>
              </div>
              <a class="card-footer text-decoration-none fs-5 d-flex justify-content-between align-items-center" href="#">
                More info <i class="fa fa-arrow-circle-right"></i>
              </a>
            </div>
          </div>
          <div class="col-lg-4 col-md-3 col-sm-12 pr-0 mb-3">
            <div class="card text-white bg-warning shadow-lg">
              <div class="card-header fs-4"><i class="fas fa-calendar-check"></i> Upcoming Appointments</div>
              <div class="card-body">
                <h3 class="card-title fs-2">44</h3>
              </div>
              <a class="card-footer text-decoration-none fs-5 d-flex justify-content-between align-items-center" href="#">
                More info <i class="fa fa-arrow-circle-right float-end"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- Quick Actions Panel -->
        <div class="row mt-3">
        <div class="col-12">
            <div class="card shadow-sm">
            <div class="card-header fw-bold bg-light">
                Quick Actions
            </div>
            <div class="card-body d-flex flex-wrap gap-3">
                <a href="#" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="fas fa-user-md me-2"></i>Add Doctor
                </a>
                <a href="#" class="btn btn-outline-success">
                    <i class="fas fa-user-plus me-2"></i>Add Patient
                </a>
                <a href="#" class="btn btn-outline-warning">
                    <i class="fas fa-calendar-plus me-2"></i>Schedule Appointment
                </a>
            </div>
            </div>
        </div>
        </div>
      </main>
    </div>
  </div>

    <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary">
    Launch demo modal
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Add Doctor</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Add new doctor form
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Add New</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
